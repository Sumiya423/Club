<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ash"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/stuBtnId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/back_round2"
        android:drawableLeft="@drawable/ic_outline_school_24"
        android:fontFamily="@font/aclonica"
        android:padding="12dp"
        android:text="  Visit as a student"
        android:textAllCaps="false"
        android:textColor="#fff">

    </Button>
    <TextView
        android:id="@+id/TVAdminId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text=" Are you an admin? Click below! "
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp">

    </TextView>

    <Button
        android:id="@+id/adminBtnId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/back_round2"
        android:drawableLeft="@drawable/ic_admin"
        android:fontFamily="@font/aclonica"
        android:padding="12dp"
        android:text="  Admin"
        android:textAllCaps="false"
        android:textColor="#fff">

    </Button>



</LinearLayout>