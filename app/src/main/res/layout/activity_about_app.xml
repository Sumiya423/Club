<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    android:layout_gravity="center"
    android:background="@drawable/back_pink2"
    tools:context=".AboutAppActivity">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/cpc_logo1">

    </ImageView>

    <TextView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="0dp"
        android:textSize="20dp"
        android:text="This CPC app is basically developed by a student of DIU from the department of CSE.
The contents of this app is about the Club originated by DIU CSE department.
The main reason behind developing the app is too minimize the trouble of student's
application system for any event organizes by the CPC Club. Hope this app will fill your requirements.
thanks for using the app 'CPCLtd' :)"
        android:textColor="#673AB7">

    </TextView>

</LinearLayout>