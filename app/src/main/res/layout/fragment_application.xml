<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_light_blue"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/applicationFragment"
    tools:context="view.fragment.ApplicationFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/application_recylerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/single_application">

    </androidx.recyclerview.widget.RecyclerView>

</FrameLayout>